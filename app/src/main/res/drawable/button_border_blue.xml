<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/appLightBlue" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
            android:color="@color/borderGrey" />
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
